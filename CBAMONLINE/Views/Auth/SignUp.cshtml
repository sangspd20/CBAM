@model CBAMONLINE.Models.Auth.SignUp.SignUpRequestViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
<div class="row mx-0">
    <div class="d-none d-lg-flex col-sm-6 col-xxl-7 align-items-center justify-content-end p-sm-5 p-4">
        <div class="mx-auto">
            <img src="~/images/register.png" class="img-fluid" alt="register" width="600">
        </div>
    </div>
    <div class="d-flex col-12 col-sm-6 col-xxl-5 align-items-center bg-white p-sm-3 p-xxl-5 min-vh-100">
        <div class="m-auto">
            <div class="branch">
                <img src="~/images/account-icon.png" class="branch-image" alt="account-icon">
                <div class="branch-name">cbam</div>
            </div>
            <div class="authen-form">
                <div class="form-title">Đăng ký tài khoản 🚀</div>
                <p class="mb-2 mb-sm-3">Điền thông tin đăng ký tài khoản</p>

                <form autocomplete="off" id="signUpForm" onsubmit="return false;">

                    <div class="row">
                        <div class="col-sm-6 mb-1 mb-sm-3">
                            <label asp-for="userName" class="form-label">Tài khoản đăng nhập <partial name="_RequiredField" /></label>
                            <input asp-for="userName" type="text" class="form-control" placeholder="nhập tài khoàn" tabindex="1">
                            <span asp-validation-for="userName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-1 mb-sm-3">
                            <label asp-for="email" class="form-label">Email người dùng <partial name="_RequiredField" /></label>
                            <input asp-for="email" type="email" autocomplete="off" class="form-control" placeholder="nhập email" tabindex="2">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-1 mb-sm-3">
                            <label asp-for="lastName" class="form-label">Họ <partial name="_RequiredField" /></label>
                            <input asp-for="lastName" type="text" class="form-control" placeholder="nhập họ" tabindex="3">
                            <span asp-validation-for="lastName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-1 mb-sm-3">
                            <label asp-for="firstName" class="form-label">Tên <partial name="_RequiredField" /></label>
                            <input asp-for="firstName" type="text" class="form-control" placeholder="nhập tên" tabindex="4">
                            <span asp-validation-for="firstName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="phone" class="form-label">Điện thoại <partial name="_RequiredField" /></label>
                            <input maxlength="10" asp-for="phone" type="text" autocomplete="off" placeholder="số điện thoại" class="form-control field-number" tabindex="5">
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-1 mb-sm-3">
                            <label asp-for="gender" class="form-label d-block">Giới tính</label>
                            <div class="form-check form-check-inline mt-2">
                                <input asp-for="gender" class="form-check-input" type="radio" name="gender" id="male" value="Nam" checked>
                                <label class="form-check-label" for="male">Nam</label>
                            </div>
                            <div class="form-check form-check-inline mt-2">
                                <input asp-for="gender" class="form-check-input" type="radio" name="gender" id="female" value="Nữ">
                                <label class="form-check-label" for="female">Nữ</label>
                            </div>
                        </div>
                    </div>
                    <div class="row my-2 my-sm-4">
                        <div class="col-sm-6">
                            <label asp-for="password" class="form-label">Mật khẩu đăng nhập <partial name="_RequiredField" /></label>
                            <input asp-for="password" type="password" class="form-control" placeholder="mật khẩu đăng nhập" tabindex="7">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="confirmPassword" class="form-label">Nhập lại mật khẩu <partial name="_RequiredField" /></label>
                            <input asp-for="confirmPassword" type="password" class="form-control" placeholder="nhập lại mật khẩu" tabindex="8">
                            <span asp-validation-for="confirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button onclick="signUp()" type="button" class="btn btn-submit btn-primary w-50 mb-3" tabindex="9">
                            Đăng ký
                        </button>
                    </div>

                </form>
                <p class="text-center">
                    <span>Bạn đã có tài khoản?</span>
                    <a asp-action="Login" asp-controller="Auth">
                        <span>Đăng nhập</span>
                    </a>
                </p>
                <p class="text-center mt-2">
                    <a href="/" class="text-decoration-none">
                        <i class="fa fa-chevron-left me-2" aria-hidden="true"></i>
                        <span>Quay về trang chủ</span>
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/signUp.js" asp-append-version="true"></script>
}

