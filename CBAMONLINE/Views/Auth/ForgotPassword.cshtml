@model CBAMONLINE.Models.Auth.ForgotPassword.ForgotPasswordRequest

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="row mx-0">
    <div class="d-none d-lg-flex col-sm-6 col-xxl-8 align-items-center p-5">
        <div class="w-100 d-flex justify-content-center">
            <img src="~/images/reset-password.png" class="img-fluid" alt='reset-password' width='700' />
        </div>
    </div>
    <div class="d-flex col-12 col-sm-6 col-xxl-4 align-items-center bg-white p-sm-5 p-4 min-vh-100">
        <div class="m-sm-5">
            <div class="branch">
                <img src="~/images/account-icon.png" class="branch-image" alt="account-icon">
                <div class="branch-name">cbam</div>
            </div>
            <div class="authen-form">
                <div class="form-title">Quên mật khẩu? 🔒</div>
                <p class="mb-4">Nhập email của bạn và chúng tôi sẽ gửi hướng dẫn của bạn để đặt lại mật khẩu của bạn</p>
                <form method="post" asp-action="ForgotPassword" asp-controller="Auth">
                    <div class="mb-4">
                        <label asp-for="email" class="form-label">Email <partial name="_RequiredField" /></label>
                        <input asp-for="email" type="email" class="form-control" tabindex="1" placeholder="nhập email">
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary w-50 mb-3" tabindex="2">
                            Gửi
                        </button>
                    </div>
                    
                </form>
                <p class="text-center">
                    <a asp-action="Login" asp-controller="Auth" class="text-decoration-none">
                        <i class="fa fa-chevron-left me-2" aria-hidden="true"></i>
                        <span>Quay về đăng nhập</span>
                    </a>
                </p>
               
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

