@model CBAMONLINE.Models.Auth.Login.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="row mx-0">
    <div class="d-none d-lg-flex col-sm-6 col-xxl-7 align-items-center p-5">
        <div class="w-100 d-flex justify-content-center">
            <img src="~/images/sign-in.png" class="img-fluid" alt='sign-in' width='700' />
        </div>
    </div>
    <div class="d-flex col-12 col-sm-6 col-xxl-5 align-items-center bg-white p-sm-5 p-4 min-vh-100">
        <div class="m-auto">
            <div class="branch">
                <img src="~/images/account-icon.png" class="branch-image" alt="account-icon">
                <div class="branch-name">cbam</div>
            </div>
            <div class="authen-form">
                <div class="form-title">Welcome to CBAM! 👋</div>
                <p class="mb-4">Bạn đang đăng nhập vào hệ thống bài tập của CBAM</p>
                <form method="post" asp-action="Login" asp-controller="Auth">
                    <div class="mb-4">
                        <label asp-for="account" class="form-label">Tài khoản đăng nhập <partial name="_RequiredField" /></label>
                        <input asp-for="account" type="text" class="form-control" tabindex="1" placeholder="nhập tài khoản">
                        <span asp-validation-for="account" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="password" class="form-label">Mật khẩu đăng nhập <partial name="_RequiredField" /></label>
                        <div class="input-group input-group-merge has-validation">
                            <input id="password" type="password" asp-for="password" class="form-control" placeholder="·········" tabindex="2">
                            <span toggle="#Password" class="input-group-text toggle-password cursor-pointer">
                                <i class="fa fa-eye-slash icon-hide" aria-hidden="true"></i>
                                <i class="fa fa-eye d-none icon-show" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    @* <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="remember">
                    <label class="form-check-label" for="remember">
                    Remember Me
                    </label>
                    </div>*@
                    <p class="pull-right mb-3">
                        <a asp-action="ForgotPassword" asp-controller="Auth">
                            <span>Quên mật khẩu?</span>
                        </a>
                    </p>
                    <button class="btn btn-primary w-100 mb-3" tabindex="3">
                        Đăng nhập
                    </button>
                </form>
                <p class="text-center">
                    <span>Bạn chưa có tài khoản?</span>
                    <a asp-action="SignUp" asp-controller="Auth">
                        <span>Tạo tài khoản</span>
                    </a>
                </p>
                <p class="text-center mt-2">
                    <a href="/" class="text-decoration-none">
                        <i class="fa fa-chevron-left me-2" aria-hidden="true"></i>
                        <span>Quay về trang chủ</span>
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

